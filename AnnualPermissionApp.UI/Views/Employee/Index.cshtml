@model List<EmployeeViewModel>

<div class="text-center">
    <h2 class="">Plasiyerler</h2>
</div>
<div class="text-center  mt-4">
    <button class="btn btn-success">
        Yeni Plasiyer Ekle
    </button>
</div>

<table class="table table-striped table-inverse table-responsive hovered">
    <thead class="thead-inverse">
        <tr>

            <th>Plasiyer Id</th>
            <th>Plasiyer Adı</th>
            <th>Plasiyer Soyadı</th>
            <th>Plasiyer Ünvanı</th>
            <th>İşe Giriş Tarihi</th>
            <th>Kaç Yıl?</th>
            <th>İzin Kullandır</th>
            <th>Kanuni izin hakkı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Title</td>
                <td>@item.EnterDate.ToString("yyyy")</td>
                <td>@(DateTime.Now.Year - item.EnterDate.Year)</td>
                @{
                        if((DateTime.Now.Year - item.EnterDate.Year )<1 )
                        {
                           <td>0 GÜN</td> 
                        }
                        else if((DateTime.Now.Year - item.EnterDate.Year<=5))
                        {
                            <td>14 GÜN</td>

                        }
                        else if((DateTime.Now.Year - item.EnterDate.Year )>5  ){
                            <td>20 GÜN</td>
                        }
                        else{
                            <td>26 GÜN</td>
                        }
                    }
                <td>
                    <button class="btn btn-warning btn-sm" asp-route-id="@item.Id">İzin Kullan</button>
                </td>


            </tr>
        }

    </tbody>
</table>