@model AppUserLoginDto
@{
    Layout="_LoginLayout";
}
<div asp-validation-summary="All" class="text-danger">

</div>

<h3 class="text-center display-3">Giriş Yap</h3>

<form method="post" asp-action="Login" asp-controller="Account" class="w-50 mx-auto shadow p-3">

<div class="form-group">
    <label >Kullanıcı Adı:</label>
    <input type="text" class="form-control" asp-for="Username">
    <span asp-validation-for="Username" class="text-danger"></span>
</div>

<div class="form-group">
    <label >Şifre :</label>
    <input type="password" class="form-control" asp-for="Password">
    <span asp-validation-for="Password" class="text-danger"></span>
</div>
<br>
<div class="form-group">
    <label>Beni Hatırla
        <input type="checkbox" asp-for="RememberMe" class="form-check-input">
    </label>
</div>

<br>
<button asp-controller="Account" asp-action="Login" class="btn btn-success"><i class="fas fa-key p-1"></i>Giriş Yap</button>

</form>