@model AppUserRegisterDto
@{
    Layout = "_LoginLayout";
}

<h5 class="display-5 text-center">Kayıt Ol</h5>
<form asp-action="Register" asp-controller="Account" class="w-50 shadow p-3 mx-auto">

    <div class="form-group">
        <label >Kullanıcı Adınız :</label>
        <input type="text" class="form-control" asp-for="Username">
        <span asp-validation-for="Username"></span>
    </div>

    <div class="form-group">
        <label >E-Mail Adresiniz :</label>
        <input type="email" class="form-control" asp-for="EMail">
        <span asp-validation-for="EMail"></span>
    </div>

    <div class="form-group">
        <label >Şifreniz :</label>
        <input type="password" class="form-control" asp-for="Password">
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label> Şifreniz tekrar : </label>
        <input type="password" class="form-control" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-group">
        <label >Adınız :</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="">Soyadınız :</label>
        <input type="text" class="form-control" asp-for="Surname">
        <span asp-validation-for="Surname"></span>
    </div>

    <div class="form-group">
        <label for="">İşe Giriş Tarihiniz :</label>
        <input type="date" class="form-control" asp-for="EnterDate">
        <span asp-validation-for="EnterDate"></span>
    </div>

    <div class="form-group">
        <label >Ünvanınız :</label>
        <input type="text" class="form-control" asp-for="Title">
        <span asp-validation-for="Title"></span>
    </div>
    <br>
    <button class="btn btn-success btn-block" type="submit">Kaydol</button>
    <a class="btn btn-link" asp-action="Login" asp-controller="Account"> Giriş Yap</a>


</form>